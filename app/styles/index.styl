// elements

html, body
  background #fff
  color #333
  font-family sans-serif
  font-size 12px
  height 100%
  margin 0
  padding 0

h1, h2
  margin 0
  font-weight normal

main
  padding 1em

fieldset
  border 1px solid #eee

legend
  font-weight bold

#root
  height 100%

.main-loader
  align-items center
  display flex
  justify-content center
  left 0
  position absolute
  right 0
  top 0
  z-index 1337

.main-loader-message
  color #600

  .ball-pulse-sync > div
    background-color #600
    float right

  > div
    margin auto
    width 30%
