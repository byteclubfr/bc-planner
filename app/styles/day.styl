.day
  border 1px solid #eee
  display flex

  ul
    padding .5em

.day-date
  border-right 1px solid #ddd
  font-size .8em
  min-width 3em
  padding .5em
  text-align right

.day-weekend
  background #eee !important

.event-list
  flex-grow 1
  list-style none
  margin 0
  padding 0

  li
    display flex

.event-title
  flex-grow 1

.event-gravatar

  img
    vertical-align center
