.event-form-open
  margin-left 1em

.event-form
  background #fff
  border 2px solid #eee
  box-shadow 0px 5px 15px #888
  padding 1em
  position absolute
  right 0
  width 25%

  h2
    margin-top 0

  > div
    margin-bottom 1em

  input, textarea
    width 100%

.event-form-close
  margin-left 1em
