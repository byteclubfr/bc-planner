.fx-container,
.fx-pusher,
.fx-content
  height 100%

.fx-content,
.fx-content-inner
  position relative

.fx-container
  position relative
  overflow hidden

.fx-pusher
  position relative
  left 0
  z-index 99
  height 100%
  perspective 1000px
  transition transform 0.5s

.fx-pusher::after
  position absolute
  top 0
  right 0
  width 0
  height 0
  background rgba(0,0,0,0.1)
  content ''
  opacity 0
  transition opacity 0.5s, width 0.1s 0.5s, height 0.1s 0.5s

.fx-menu-open .fx-pusher::after
  width 100%
  height 100%
  opacity 1
  transition opacity 0.5s

.fx-menu
  position absolute
  top 0
  left 0
  z-index 100
  visibility hidden
  width 300px
  height 100%
  transition all 0.5s

.fx-menu::after
  position absolute
  top 0
  right 0
  width 100%
  height 100%
  background rgba(0,0,0,0.1)
  content ''
  opacity 1
  transition opacity 0.5s

.fx-menu-open .fx-menu::after
  width 0
  height 0
  opacity 0
  transition opacity 0.5s, width 0.1s 0.5s, height 0.1s 0.5s

.fx-container
  perspective 1500px

.fx-pusher
  transform-style preserve-3d

.fx-menu-open .fx-pusher
  transform translate3d(0, 0, -300px)

.fx-menu
  opacity 1
  transform translate3d(-100%, 0, 0)

.fx-menu-open .fx-menu
  visibility visible
  transition transform 0.5s
  transform translate3d(0, 0, 0)

.fx-menu::after
  display none

